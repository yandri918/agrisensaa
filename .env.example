# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///agrisensa.db
# For PostgreSQL: postgresql://user:password@localhost:5432/agrisensa

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# ML Models Path
ML_MODELS_PATH=ml_models

# Upload Configuration
UPLOAD_FOLDER=uploads/pdfs
TEMP_IMAGE_FOLDER=uploads/temp_images
MAX_CONTENT_LENGTH=16777216

# External API Keys (if needed)
WEATHER_API_KEY=your-weather-api-key
MARKET_DATA_API_KEY=your-market-data-api-key

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/agrisensa.log

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Sentry (Error Tracking) - Optional
SENTRY_DSN=your-sentry-dsn-here
